<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:backgroundTint="#FFF"
    android:background="#FFF"
    tools:context=".ui.fragment.Schedule"
    android:id="@+id/rl_schedule">

    <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/tv_schedule_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Schedule"
            android:textSize="30dp"
            android:textAlignment="center"
           android:layout_marginVertical="10dp"/>
    <LinearLayout
        android:id="@+id/rl_menu_schedule"
        android:layout_below="@id/tv_schedule_title"
        android:orientation="horizontal"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/bg_item"
        android:layout_width="match_parent"
        android:padding="12dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/calendar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical|end"
            android:text="This menus will help you to create better and to take medication regularly."
            android:textColor="#FFF"/>
    </LinearLayout>

    <View
        android:id="@+id/v_separator_schedule"
        android:layout_below="@id/rl_menu_schedule"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="#E8E9E8" />

    <TextView
        android:id="@+id/tv_today_title"
        android:layout_below="@id/v_separator_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Today Schedule"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"/>

    <LinearLayout
        android:id="@+id/card1"
        android:layout_below="@id/tv_today_title"
        android:orientation="horizontal"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_pill"
        android:layout_width="match_parent"
        android:padding="12dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:src="@drawable/pill"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginVertical="8dp"

            android:orientation="vertical">
            <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14/07/2019    07:00"
            android:textSize="16dp"
            android:textColor="#fff"
            />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jadwal Minum obat ARV tipe ARV 1"
                android:textSize="12dp"
                android:textColor="#fff"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/card2"
        android:layout_below="@id/card1"
    android:orientation="horizontal"
    android:layout_marginHorizontal="60dp"
        android:layout_marginTop="10dp"
    android:background="@drawable/bg_pill"
    android:layout_width="match_parent"
    android:padding="12dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:src="@drawable/pill"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginVertical="8dp"

        android:orientation="vertical">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14/07/2019    15.00"
            android:textSize="16dp"
            android:textColor="#fff"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jadwal Minum obat ARV tipe ARV 1"
            android:textSize="12dp"
            android:textColor="#fff"/>
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:id="@+id/card3"
        android:layout_below="@id/card2"
        android:orientation="horizontal"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_pill"
        android:layout_width="match_parent"
        android:padding="12dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:src="@drawable/pill"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginVertical="8dp"

            android:orientation="vertical">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14/07/2019    23.00"
                android:textSize="16dp"
                android:textColor="#fff"
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jadwal Minum obat ARV tipe ARV 1"
                android:textSize="12dp"
                android:textColor="#fff"/>
        </LinearLayout>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:backgroundTint="@color/colorRed"
        android:src="@drawable/ic_add_black_24dp"
        android:layout_alignBottom="@+id/rl_menu_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        />
    




</RelativeLayout>